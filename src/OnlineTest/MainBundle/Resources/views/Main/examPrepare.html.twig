{% extends 'OnlineTestMainBundle::student.html.twig' %}

{% block admin_main_left %}
    <div id="student_infor" class="left_infor">
        <div class="left_title">
            用户信息
        </div>
        {% if isRealName=="realname" %}
            <div id="student_username" hidden>{{ app.user.username }}</div>
            <div>
                用户名：{{ app.user.studentName }}
            </div>
            <div>
                姓名：{{ app.user.name }}
            </div>

        {% else %}
            <div>
                匿名考试无信息
            </div>

        {% endif %}
    </div>
    <div id="exam_infor" class="left_infor" hidden>
        <div id="exam_infor_examId">{{ examId }}</div>
        <div id="exam_infor_isrealname">{{ isRealName }}</div>
    </div>
    <ul>
        <li><a href="#" id="start_exam" class="button button-rounded button-flat-primary">开始答题</a></li>
    </ul>
{% endblock %}

{% block function_content %}
    
    <div id="flash_message">
        <div class="button glow button-rounded button-flat-action flash-notice">
        </div>
    </div>
{% endblock %}


{% block javascripts %}
    {{ parent() }}
    {%  javascripts 
        '@OnlineTestMainBundle/Resources/public/js/examPrepare.js' 
    %}
    <script type="text/javascript" src="{{asset_url}}"></script>
    {% endjavascripts %}
    
{% endblock %}
