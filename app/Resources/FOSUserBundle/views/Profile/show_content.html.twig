{% trans_default_domain 'FOSUserBundle' %}

<div class="fos_user_user_show">
    <div class="admin_formRow">
        <span class="admin_labelFont" >{{ 'profile.show.username'|trans }}: </span>
        <span class="admin_inputStyle" style="border: none; line-height: 28px;">{{ user.username }}</span>
    </div>
    <div class="admin_formRow">
        <span class="admin_labelFont">姓名: </span>
        <span class="admin_inputStyle"  style="border: none; line-height: 28px;">{{ user.name }}</span>
    </div>
    <div class="admin_formRow">
        <span class="admin_labelFont">{{ 'profile.show.email'|trans }}: </span>
        <span class="admin_inputStyle"  style="border: none; line-height: 28px;">{{ user.email }}</span>
    </div>
    <div class="admin_formRow">
        <a href=" {{ url('admin_changeInfo') }}" class="button button-rounded button-flat-action submitButtonStyle" style="width: 150px;">修改个人信息</a>
    </div>
</div>
